# Native apps
brew install brew-cask
function installcask() {
    if brew cask info "${@}" | grep "Not installed" > /dev/null; then
        brew cask install "${@}"
    else
        echo "${@} is already installed."
    fi
}

installcask dropbox
installcask firefox
installcask one-password
installcask mailplane
installcask hip-chat
