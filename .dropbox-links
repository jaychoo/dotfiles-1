#!/bin/bash

# Set up some dropbox links

if [ -d $HOME/Dropbox ]; then
    ln -s -f $HOME/Dropbox/Calibre $HOME/Documents/Calibre
    ln -s -f $HOME/Dropbox/iChats $HOME/Documents/iChats
    ln -s -f $HOME/Dropbox/Presentations $HOME/Presentations
    ln -s -f $HOME/Dropbox/Shrapnel $HOME/Shrapnel
    ln -s -f $HOME/Dropbox/Shrapnel $HOME/Desktop/Shrapnel
fi
